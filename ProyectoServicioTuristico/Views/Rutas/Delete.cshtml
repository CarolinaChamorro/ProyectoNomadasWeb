@model ProyectoServicioTuristico.Models.Ruta

@{ ViewData["Title"] = "Delete"; }

<div class="col-md-8 mx-auto py-4">
    <div class="card">
        <div class="card-header text-center">
            <h3 class="text-black text-center text-danger">¿Estás seguro que quieres eliminar este registro?</h3>
        </div>
        <hr />
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Nombre)
                    </div>
                </div>
                <div class="col-6">
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PuntoPartida)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.PuntoPartida)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PuntoLLegada)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.PuntoLLegada)
                    </div>
                </div>
                <div class="col-6">
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Precio)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Precio)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DescripcionServicios)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.DescripcionServicios)
                    </div>
                </div>
                <div class="col-6">
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Guia)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Guia.ApellidoPaterno)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ClasificacionRuta)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.ClasificacionRuta.Nombre)
                    </div>
                </div>
            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="RutaId" />
                <input type="submit" value="Eliminar" class="btn btn-danger" /> 
                <a href='javascript:history.go(-1)' class="btn btn-outline-primary">Regresar</a>
            </form>
        </div>
    </div>
</div>
