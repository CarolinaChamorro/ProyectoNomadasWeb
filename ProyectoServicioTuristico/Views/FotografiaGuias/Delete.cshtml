@model ProyectoServicioTuristico.Models.FotografiaGuia

@{
    ViewData["Title"] = "Delete";
}

<div class="col-md-8 mx-auto py-4">
    <div class="card">
        <div class="card-header text-center">
            <h3 class="text-black text-center text-danger">¿Estás seguro que quieres eliminar este registro?</h3>
        </div>
        <hr />
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    <div class="col-sm-10 text-primary">
                        @Html.DisplayNameFor(model => model.Guia)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Guia.Identidad)
                    </div>
                </div>
                <div class="col-6">
                    <div class="col-sm-10 text-primary">
                       Foto
                    </div>
                    <div class="col-sm-10">
                        <img src="@("~/images/guias/book/"+Model.Fotos)"
                             class="rounded-circle"
                             height="60" width="60"
                             asp-append-version="true" />
                    </div>
                </div>
            </div>
                <div class="col-sm-10 text-primary text-info">
                    @Html.DisplayNameFor(model => model.DescripcionFoto)
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.DescripcionFoto)
                </div>
            <div class="text-center">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="FotografiaId" />
                    <a href='javascript:history.go(-1)' class="btn btn-outline-primary mr-2">Regresar</a>
                        <input type="submit" value="Eliminar" class="btn btn-danger ml-2" />
                </form>
            </div>
        </div>
    </div>
</div>

