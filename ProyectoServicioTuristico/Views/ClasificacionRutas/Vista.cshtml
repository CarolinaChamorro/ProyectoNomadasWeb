@model IEnumerable<ProyectoServicioTuristico.Models.ClasificacionRuta>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="text-center mb-5">
        <h2 class="section-heading text-uppercase">Clasificación de lugares turísticos por tópicos </h2>
        <h3 class="section-subheading text-muted">Vive una nueva experiencia desde aquí</h3>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-sm-6 mb-4">
                <div class="portfolio-item card" style="width: 19rem;">
                    <a class="embed-responsive embed-responsive-16by9">
                        <img src="~/images/clasificaciones/@item.Foto"
                             asp-append-version="true" class="img-fluid card-img-top image embed-responsive-item" />
                    </a>
                    <div class="portfolio-caption card-body" style=" background-color: rgba(129, 170, 247, 0.555);">
                        <div class="card-title">
                            <h5>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </h5>
                        </div>
                        <div>
                            <div class="portfolio-caption-subheading text-muted">@Html.DisplayFor(modelItem => item.Descripcion)</div>
                            <div class="portfolio-caption-subheading text-muted mt-2">
                                <h6 class="text-success">
                                    Provincia:
                                    @Html.DisplayFor(modelItem => item.Provincia.Nombre)
                                </h6>
                            </div>
                            <div class="portfolio-caption-subheading text-muted">
                                <h6 class="text-success">
                                    Cantón:
                                    @Html.DisplayFor(modelItem => item.Canton.Nombre)
                                </h6>
                            </div>
                        </div>
                        <div class="text-center">
                            <a asp-controller="Rutas" asp-action="Vista"  class="btn btn-outline-primary mr-3" asp-route-id="@item.ClasificacionRutaId">Rutas</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
